@page
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model CreateExpenseModel
@{
    ViewData["Title"] = "Add Expense";
}

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</head>

<h1 class="text-center my-4">Add Expense</h1>

<div class="container bg-light shadow p-4 rounded">
    <form method="post" class="row g-3">
        <div class="col-md-6">
            <label for="Category" class="form-label text-primary">
                <i class="fas fa-list"></i> Category
            </label>
            <select id="Category" name="Expense.Category" class="form-select" required>
                <option value="" disabled selected>Select a Category</option>
                @foreach (var category in Model.Categories)
                {
                    <option value="@category">@category</option>
                }
            </select>
        </div>
        <div class="col-md-6">
            <label for="Description" class="form-label text-primary">
                <i class="fas fa-info-circle"></i> Description
            </label>
            <textarea id="Description" name="Expense.Description" class="form-control" rows="3" required></textarea>
        </div>
        <div class="col-md-6">
            <label for="Amount" class="form-label text-primary">
                <i class="fas fa-indian-rupee-sign"></i> Amount
            </label>
            <input type="number" id="Amount" name="Expense.Amount" class="form-control" step="0.01" required />
        </div>
        <div class="col-md-6">
            <label for="Date" class="form-label text-primary">
                <i class="fas fa-calendar-alt"></i> Date
            </label>
            <input type="date" id="Date" name="Expense.Date" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" required />
        </div>
        
        <input type="hidden" id="CreatedBy" name="Expense.CreatedBy" value="@HttpContext.Session.GetString("Username")" />

        <div class="col-md-12 text-center">
            <button type="submit" class="btn btn-success btn-lg">
                <i class="fas fa-save"></i> Save
            </button>
            <a asp-page="/Index" class="btn btn-secondary btn-lg">
                <i class="fas fa-arrow-left"></i> Cancel
            </a>
        </div>
    </form>
</div>
