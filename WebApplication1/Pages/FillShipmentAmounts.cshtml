@page
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model FillShipmentAmountsModel
@{
    ViewData["Title"] = "Fill Shipment Amounts";
}

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</head>

<h1 class="text-center my-4">Fill Shipment Amounts</h1>
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
<div class="container bg-light shadow p-4 rounded">
    <!-- Search Section -->
    <form method="get" class="row g-3">
        <div class="col-md-6">
            <label for="SearchShipmentId" class="form-label text-primary">
                <i class="fas fa-search"></i> Search by Shipment ID
            </label>
            <input type="number" id="SearchShipmentId" name="SearchShipmentId" class="form-control" value="@Model.SearchShipmentId" required />
        </div>
        <div class="col-md-12 text-center">
            <button type="submit" class="btn btn-primary btn-lg">
                <i class="fas fa-search"></i> Search
            </button>
        </div>
    </form>
    <!-- Update Amount Section -->
    <form method="post" class="row g-3 mt-4">
        <div class="col-md-6">
            <label for="ShipmentId" class="form-label text-primary">
                <i class="fas fa-box"></i> Shipment ID
            </label>
            <input type="text" id="ShipmentId" name="ShipmentId" class="form-control" value="@Model.ShipmentId" readonly />
        </div>
        <div class="col-md-6">
            <label for="Amount" class="form-label text-primary">
                <i class="fas fa-dollar-sign"></i> Amount
            </label>
            <input type="number" id="Amount" name="Amount" class="form-control" value="@Model.Amount" required />
        </div>
        <div class="col-md-6">
            <div class="form-check mt-4">
                <input class="form-check-input" type="checkbox" id="ReceivePayment" name="ReceivePayment" value="true" @(Model.ReceivePayment ? "checked" : "") />
                <label class="form-check-label" for="ReceivePayment">
                    <i class="fas fa-check"></i> Payment Received
                </label>
            </div>
        </div>
        <div class="col-md-12 text-center">
            <button type="submit" class="btn btn-success btn-lg">
                <i class="fas fa-save"></i> Save
            </button>
            <a asp-page="/Index" class="btn btn-secondary btn-lg">
                <i class="fas fa-arrow-left"></i> Back to Home
            </a>
        </div>


    </form>
    <!-- Display Shipment Details -->
    @if (Model.ShipmentFound)
    {
        <div class="mt-4">
            <h4 class="text-primary">Shipment Details</h4>
            <table class="table table-bordered">
                <tbody>
                    <tr>
                        <th>Shipment ID</th>
                        <td>@Model.ShipmentId</td>
                    </tr>
                    <tr>
                        <th>Sender Name</th>
                        <td>@Model.SenderName</td>
                    </tr>
                    <tr>
                        <th>Receiver Name</th>
                        <td>@Model.ReceiverName</td>
                    </tr>
                    <tr>
                        <th>City</th>
                        <td>@Model.City</td>
                    </tr>
                    <tr>
                        <th>Booking Office</th>
                        <td>@Model.BookingOffice</td>
                    </tr>
                    <tr>
                        <th>Payment Status</th>
                        <td>@Model.PaymentStatus</td>
                    </tr>
                </tbody>
            </table>
        </div>

     
    }
    else if (Model.SearchShipmentId.HasValue)
    {
        <div class="alert alert-warning text-center mt-4">
            Shipment with ID @Model.SearchShipmentId was not found.
        </div>
    }
</div>

