@page
@model IndexModel
@{
    ViewData["Title"] = "Home Page";
}

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</head>

<h1 class="text-center my-4">Welcome to the Vijay Laxmi Transport Booking System</h1>

<div class="container bg-light shadow p-4 rounded">
    <div class="text-center mb-4">
        <h2 class="text-primary">Welcome, @Model.Username!</h2>
        <p class="text-secondary">We are glad to have you back. Explore the system using the options below.</p>
    </div>
    <div class="text-end">
        <a href="/Logout" class="btn btn-danger btn-lg">
            <i class="fas fa-sign-out-alt"></i> Logout
        </a>
    </div>

    <!-- Section: Data Entry -->
    <div class="mb-4">
        <h3 class="text-primary">Data Entry</h3>
        <div class="row g-3">
            <div class="col-md-6">
                <a href="/DataEntry/Create" class="btn btn-primary btn-lg w-100">
                    <i class="fas fa-database"></i> લેનાર પાર્ટી ની ડિટેલ નાખો
                </a>
            </div>
            <div class="col-md-6">
                <a href="/Sender/Create" class="btn btn-primary btn-lg w-100">
                    <i class="fas fa-user-plus"></i> મોકલનાર પાર્ટી ની ડિટેલ નાખો
                </a>
            </div>
            <div class="col-md-6">
                <a href="/Truck/Create" class="btn btn-primary btn-lg w-100">
                    <i class="fas fa-truck"></i> ટ્રક ની ડિટેલ નાખો
                </a>
            </div>
        </div>
    </div>

    <!-- Section: Shipments -->
    <div class="mb-4">
        <h3 class="text-primary">Consignments and Truck</h3>
        <div class="row g-3">
            <div class="col-md-6">
                <a href="/Shipment/Create" class="btn btn-primary btn-lg w-100">
                    <i class="fas fa-shipping-fast"></i> બિલ્ટી બનાવો
                </a>
            </div>
            <div class="col-md-6">
                <a href="/ShipmentTruckAssignment/Create" class="btn btn-primary btn-lg w-100">
                    <i class="fas fa-link"></i>
                    ગાડી ભરો
                </a>
            </div>
            <div class="col-md-6">
                <a href="/ShipmentsByTruck" class="btn btn-primary btn-lg w-100">
                    <i class="fas fa-list"></i> મેમો બનાવો
                </a>
            </div>
        </div>
    </div>

  

    <!-- Section: Reports -->
    <div class="mb-4">
        <h3 class="text-primary">Reports</h3>
        <div class="row g-3">
      
            <div class="col-md-6">
                <a href="/SearchShipmentsByDate" class="btn btn-primary btn-lg w-100">
                    <i class="fas fa-calendar-alt"></i> Shipment Reports
                </a>
            </div>
            <div class="col-md-6">
                <a href="/SearchTrucksByDateModel" class="btn btn-primary btn-lg w-100">
                    <i class="fas fa-calendar-alt"></i> Truck Reports
                </a>
            </div>
        </div>
    </div>
</div>
