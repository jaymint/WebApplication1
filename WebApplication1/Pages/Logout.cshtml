@page
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model LogoutModel
@{
    ViewData["Title"] = "Logout";
}

<!DOCTYPE html>
<html>
<head>
    <title>Logout</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container text-center mt-5">
        <h2 class="text-danger">Are you sure you want to log out?</h2>
        <p class="text-secondary">You will need to log in again to access the system.</p>
        <div class="mt-4">
            <form method="post">
                <button type="submit" class="btn btn-danger btn-lg">Yes, Log Out</button>
                <a href="/" class="btn btn-secondary btn-lg">Cancel</a>
            </form>
        </div>
    </div>
</body>
</html>
