@page
@model BestReceiversModel
@{
    ViewData["Title"] = "Best Receivers";
}
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    </head>

<div class="container my-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow mb-4">
                <div class="card-header bg-primary text-white d-flex align-items-center">
                    <i class="fas fa-trophy fa-lg me-2"></i>
                    <h4 class="mb-0">Best Receivers of Shipments</h4>
                </div>
                <div class="card-body">
                    <form method="get" class="row g-3 align-items-center">
                        <div class="col-auto">
                            <label for="timeline" class="col-form-label fw-bold">Timeline:</label>
                        </div>
                        <div class="col-auto">
                            <select id="timeline" name="Timeline" class="form-select" onchange="this.form.submit()">
                                <option value="today" selected="@("today" == Model.Timeline)">Today</option>
                                <option value="week" selected="@("week" == Model.Timeline)">This Week</option>
                                <option value="month" selected="@("month" == Model.Timeline)">This Month</option>
                                <option value="all" selected="@("all" == Model.Timeline)">All Time</option>
                            </select>
                        </div>
                    </form>
                </div>
            </div>

            <div class="card shadow">
                <div class="card-body">
                    @if (Model.BestReceivers != null && Model.BestReceivers.Count > 0)
                    {
                        <div class="table-responsive">
                            <table class="table table-bordered table-striped mb-0">
                                <thead class="table-primary">
                                    <tr>
                                        <th>#</th>
                                        <th>Receiver Name</th>
                                        <th>Number of Shipments</th>
                                        <th>Total Price Paid</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @for (int i = 0; i < Model.BestReceivers.Count; i++)
                                    {
                                        <tr>
                                            <td>@(i + 1)</td>
                                            <td>@Model.BestReceivers[i].ReceiverName</td>
                                            <td>@Model.BestReceivers[i].ShipmentCount</td>
                                            <td>@Model.BestReceivers[i].TotalPrice.ToString("C")</td>
                                        </tr>
                                    }
                                </tbody>

                            </table>
                        </div>
                        <!-- Pagination Controls -->
                        <nav aria-label="Page navigation" class="mt-3">
                            <ul class="pagination justify-content-center">
                                <li class="page-item @(Model.Page == 1 ? "disabled" : "")">
                                    <a class="page-link" href="?Timeline=@Model.Timeline&Page=@(Model.Page - 1)">Previous</a>
                                </li>
                                @for (int p = 1; p <= Model.TotalPages; p++)
                                {
                                    <li class="page-item @(Model.Page == p ? "active" : "")">
                                        <a class="page-link" href="?Timeline=@Model.Timeline&Page=@p">@p</a>
                                    </li>
                                }
                                <li class="page-item @(Model.Page == Model.TotalPages ? "disabled" : "")">
                                    <a class="page-link" href="?Timeline=@Model.Timeline&Page=@(Model.Page + 1)">Next</a>
                                </li>
                            </ul>
                        </nav>
                    }
                    else
                    {
                        <div class="alert alert-info text-center mt-4">
                            <i class="fas fa-info-circle"></i> No receivers found for the selected timeline.
                        </div>
                    }
                </div>
            </div>
            <div class="text-center mt-4">
                <a href="/Index" class="btn btn-secondary btn-lg d-flex align-items-center justify-content-center mx-auto" style="max-width:200px;">
                    <i class="fas fa-arrow-left me-2"></i> Back to Home
                </a>
            </div>
        </div>
    </div>
</div>


