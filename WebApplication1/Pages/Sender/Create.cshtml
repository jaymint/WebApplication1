@page
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model CreateSenderModel
@{
    ViewData["Title"] = "Create Sender";
}

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</head>

<h1 class="text-center my-4"> Enter details of Sender <!-- મોકલનાર પાર્ટી ની ડિટેલ --> </h1>
<script>
    function editSender(senderId) {
          console.log("Shipment ID Selected yes: ", senderId);
        // Find the sender row in the table using the data-id attribute
        const rows = document.querySelectorAll("table tbody tr");
        let selectedRow = null;

        rows.forEach(row => {
            const builtyNumberCell = row.children[0]; // First cell contains the shipment ID
            console.log("Shipment ID Selected yes: ", builtyNumberCell);
            if (builtyNumberCell && builtyNumberCell.textContent.trim() === senderId.toString()) {
                selectedRow = row;
            }
        });

        if (!selectedRow) {
            console.error("Senders not found.");
            return;
        }

        // Populate the form fields with the sender's data
        document.getElementById('SenderId').value = senderId; // Set the hidden field for the sender ID
        document.getElementById('Name').value = selectedRow.children[1].textContent;
        document.getElementById('Address').value = selectedRow.children[2].textContent;

        document.getElementById('Email').value = selectedRow.children[3].textContent;
        document.getElementById('PhoneNumber').value = selectedRow.children[4].textContent;
		document.getElementById('GSTIN').value = selectedRow.children[5].textContent;

        // Set the radio button state based on the "Verified GSTIN" column
        const isGstinVerifiedText = selectedRow.children[6].textContent.trim();
        document.getElementById('IsGstinVerifiedYes').checked = isGstinVerifiedText === "Yes";
        document.getElementById('IsGstinVerifiedNo').checked = isGstinVerifiedText === "No";

        // Optionally, scroll to the form
        document.getElementById('Name').scrollIntoView({ behavior: 'smooth' });
    }
</script>

<div class="container bg-light shadow p-4 rounded">
    <form method="post" class="row g-3">
        <input type="hidden" id="SenderId" name="Sender.Id" />
        <div class="col-md-6">
            <label for="Name" class="form-label text-primary">
                <i class="fas fa-user"></i> Name
            </label>
            <input type="text" class="form-control" id="Name" name="Sender.Name" required />
        </div>
        <div class="col-md-6">
            <label for="Email" class="form-label text-primary">
                <i class="fas fa-envelope"></i> Email
            </label>
            <input type="email" class="form-control" id="Email" name="Sender.Email"  />
        </div>
        <div class="col-md-6">
            <label for="PhoneNumber" class="form-label text-primary">
                <i class="fas fa-phone"></i> Contact Number
            </label>
            <input type="text" class="form-control" id="PhoneNumber" name="Sender.PhoneNumber" required />
        </div>
        <div class="col-md-6">
            <label for="Address" class="form-label text-primary">
                <i class="fas fa-map-marker-alt"></i> Address
            </label>
            <input type="text" class="form-control" id="Address" name="Sender.Address" required />
        </div>

        <div class="col-md-6">
            <label for="GSTIN" class="form-label text-primary">
                <i class="fas fa-file-invoice"></i> GSTIN
            </label>
            <input type="text" class="form-control" id="GSTIN" name="Sender.GSTIN" />
            <div class="col-md-6">
                <label class="form-label text-primary">
                    <i class="fas fa-check-circle"></i> GSTIN Verified?
                </label>
                <div class="d-flex align-items-center">
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" id="IsGstinVerifiedYes" name="Sender.IsGstinVerified" value="true" required />
                        <label class="form-check-label" for="IsGstinVerifiedYes">Yes</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" id="IsGstinVerifiedNo" name="Sender.IsGstinVerified" value="false" required />
                        <label class="form-check-label" for="IsGstinVerifiedNo">No</label>
                    </div>
                </div>
            </div>


        </div>
       

        <!-- Buttons Section 
        <div class="col-12 d-flex justify-content-between">
            <a asp-page="/Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to Home
            </a>
            <button type="submit" class="btn btn-success">
                <i class="fas fa-paper-plane"></i> Submit
            </button>
        </div>-->

        <div class="col-12 text-center">
            <div class="d-flex justify-content-center gap-3">
                <!-- Assign Button -->
                <button type="submit" class="btn btn-success btn-lg d-flex align-items-center justify-content-center">
                    <i class="fas fa-paper-plane me-2"></i> Submit
                </button>

                <!-- Cancel Button -->
                <a href="/" class="btn btn-secondary btn-lg d-flex align-items-center justify-content-center">
                    <i class="fas fa-arrow-left me-2"></i> Back to Home
                </a>
            </div>
        </div>
    </form>
    @if (Model.Senders != null && Model.Senders.Any())
    {
        <div class="mt-5">
            <h3 class="text-center">Existing Senders</h3>
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Address</th>
                        <th>Email</th>
                        <th>Contact Number</th>
						<th>GSTIN</th>
                        <th>Verified GSTIN</th> <!-- New column for GSTIN verification -->
                        <th>Actions</th> <!-- New column for actions -->
                    </tr>
                </thead>
                <tbody>
                    @foreach (var sender in Model.Senders)
                    {
                        <tr>
							<td>@sender.Id</td>
                            <td>@sender.Name</td>
                            <td>@sender.Address</td>
                            <td>@sender.Email</td>
                            <td>@sender.PhoneNumber</td>
							<td>@sender.GSTIN</td>
                            <td>@(sender.IsGstinVerified ? "Yes" : "No")</td> <!-- Display Yes/No -->
                            <td>
                                <button class="btn btn-primary btn-sm" onclick="editSender(@sender.Id)">Edit</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
         @if (Model.TotalPages > 1)
    {
        <nav>
            <ul class="pagination justify-content-center">
                <li class="page-item @(Model.PageNumber == 1 ? "disabled" : "")">
                    <a class="page-link" asp-page="./Create" asp-route-PageNumber="@(Model.PageNumber - 1)">Previous</a>
                </li>
                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                        <a class="page-link" asp-page="./Create" asp-route-PageNumber="@i">@i</a>
                    </li>
                }
                <li class="page-item @(Model.PageNumber == Model.TotalPages ? "disabled" : "")">
                    <a class="page-link" asp-page="./Create" asp-route-PageNumber="@(Model.PageNumber + 1)">Next</a>
                </li>
            </ul>
        </nav>
    }
    }
    else
    {
        <div class="mt-5 alert alert-warning text-center">
            No senders found.
        </div>
    }
   


</div>


