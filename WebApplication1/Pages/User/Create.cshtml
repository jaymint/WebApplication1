@page
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model CreateUserModel
@{
    ViewData["Title"] = "Create User";
}

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>

<h1 class="text-center my-4">Create User</h1>

<div class="container bg-light shadow p-4 rounded">
    <form method="post" class="row g-3">
        <div class="col-md-12">
            <label for="Username" class="form-label">Username</label>
            <input type="text" class="form-control" id="Username" name="User.Username" required />
        </div>
        <div class="col-md-12">
            <label for="Password" class="form-label">Password</label>
            <input type="password" class="form-control" id="Password" name="User.Password" required />
        </div>
        <div class="col-12 text-center">
            <button type="submit" class="btn btn-primary btn-lg">Create User</button>
        </div>
    </form>
</div>
